<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<TableRow android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical"
			android:layout_weight="1">

			<FrameLayout android:paddingLeft="5px"
				android:paddingRight="5px" android:paddingBottom="5px"
				android:paddingTop="10px" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView android:text="" android:layout_width="fill_parent"
					android:id="@+id/plan" android:layout_height="wrap_content"
					android:textSize="10pt" 
					android:textColor="#FFF" android:paddingLeft="6px"
					android:paddingTop="24px" android:paddingRight="0px"
					android:paddingBottom="4px" android:textStyle="bold">
				</TextView>

				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:gravity="right">
					<ProgressBar style="?android:attr/progressBarStyleSmall"
						android:layout_width="65px" android:layout_height="65px"
						android:indeterminate="true" android:visibility="invisible"
						android:padding="6px" android:id="@+id/progress" />
				</LinearLayout>


			</FrameLayout>



			<FrameLayout android:padding="5px" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_weight="1">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:background="@drawable/content"
					android:orientation="vertical"  android:layout_weight="1.0">

					<TableLayout android:layout_height="wrap_content"
						android:layout_width="fill_parent">
						<TableRow>
							<TextView android:text="@string/quota" android:gravity="right"
								android:id="@+id/quotalabel" android:textStyle="bold"
								android:layout_width="wrap_content" android:layout_height="wrap_content"
								android:padding="5px"></TextView>
							<TextView android:text="" android:id="@+id/quota"
								android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
						</TableRow>
						<TableRow>
							<TextView android:text="@string/rollover"
								android:gravity="right" android:id="@+id/rolloverlabel"
								android:textStyle="bold" android:layout_width="wrap_content"
								android:layout_height="wrap_content" android:padding="5px"></TextView>
							<TextView android:text="" android:id="@+id/rollover"
								android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
						</TableRow>

					</TableLayout>

					<com.eightbitcloud.internode.QuotaBarGraph
						android:id="@+id/quotagraph" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:layout_weight="1.0" />

					<TableLayout android:layout_height="wrap_content"
						android:layout_width="fill_parent">
						<TableRow>
							<TextView android:text="@string/usage" android:gravity="right"
								android:id="@+id/usagelabel" android:textStyle="bold"
								android:layout_width="wrap_content" android:layout_height="wrap_content"
								android:padding="5px"></TextView>
							<TextView android:text="" android:id="@+id/usage"
								android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
						</TableRow>

						<TableRow>
							<TextView android:text="@string/avgusage"
								android:gravity="right" android:id="@+id/avgusagelabel"
								android:textStyle="bold" android:layout_width="wrap_content"
								android:layout_height="wrap_content" android:padding="5px"></TextView>
							<TextView android:text="" android:id="@+id/avgusage"
								android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
						</TableRow>
					</TableLayout>



				</LinearLayout>

			</FrameLayout>
		</LinearLayout>

		<FrameLayout android:padding="5px" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_weight="1" android:layout_height="fill_parent"
				android:orientation="vertical" android:background="@drawable/content">

				<RadioGroup android:id="@+id/graphSelectorGroup"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView android:text="@string/history" android:id="@+id/historylabel"
						android:textStyle="bold" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:padding="5px" />
					<RadioButton android:id="@+id/yearButton" android:text="@string/historyYear"
						android:layout_width="wrap_content" android:layout_height="wrap_content" />
					<RadioButton android:id="@+id/monthButton"
						android:text="@string/historyMonth" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:checked="true" />
				</RadioGroup>

				<com.eightbitcloud.internode.UsageGraphView
					android:id="@+id/graph" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_weight="1.0" />

			</LinearLayout>
		</FrameLayout>
	</TableRow>
</TableLayout>



